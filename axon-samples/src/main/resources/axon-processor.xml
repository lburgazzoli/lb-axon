<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:hz="http://www.hazelcast.com/schema/spring"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
            http://www.hazelcast.com/schema/spring
            http://www.hazelcast.com/schema/spring/hazelcast-spring-3.2.xsd">

    <!-- ******************************************************************* -->
    <!-- HAZELCAST                                                           -->
    <!-- ******************************************************************* -->

    <hz:hazelcast id="axon-hz-node">
        <hz:config>
            <hz:group name="axon-cluster" password="password"/>
            <hz:properties>
                <hz:property name="hazelcast.logging.type">slf4j</hz:property>
                <hz:property name="hazelcast.jmx">false</hz:property>
            </hz:properties>
            <hz:network port="5701" port-auto-increment="true">
                <hz:interfaces>
                    <hz:interface>127.0.0.1</hz:interface>
                </hz:interfaces>
            </hz:network>
        </hz:config>

    </hz:hazelcast>

    <!-- ******************************************************************* -->
    <!--                                                                     -->
    <!-- ******************************************************************* -->

    <bean id="axon-hz-instance" class="com.github.lburgazzoli.hazelcast.HzPrefixedInstance">
        <constructor-arg ref   = "axon-hz-node"/>
        <constructor-arg value = "axon"/>
    </bean>

    <bean id             = "axon-service"
          class          = "org.axonframework.ext.hazelcast.samples.executor.AxonService"
          init-method    = "init"
          destroy-method = "destroy">
        <constructor-arg value = "axon-node"/>
        <constructor-arg ref   = "axon-hz-instance"/>
    </bean>

</beans>